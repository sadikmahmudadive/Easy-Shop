<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:radius="16dp"
    android:elevation="3dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order â„–1947034"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05-12-2019"
            android:textColor="#888"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tv_tracking_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tracking number: IW3475453455"
            android:textColor="#888"
            android:textSize="14sp"
            android:layout_below="@id/tv_order_num"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 3"
            android:textColor="#888"
            android:textSize="14sp"
            android:layout_below="@id/tv_tracking_number"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount: 112$"
            android:textColor="#222"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignBaseline="@id/tv_quantity"
            android:layout_toEndOf="@id/tv_quantity"
            android:layout_marginStart="24dp"/>

        <Button
            android:id="@+id/btn_details"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Details"
            android:background="@drawable/bg_tab_unselected"
            android:textColor="#222"
            android:layout_below="@id/tv_total_amount"
            android:layout_marginTop="12dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:textColor="#33A853"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_alignBaseline="@id/btn_details"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>