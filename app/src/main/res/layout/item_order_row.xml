<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="6dp">

            <TextView
                android:id="@+id/text_order_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ORD-10123"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/text_customer"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_order_date"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="2025-07-01"
                android:textColor="#666"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_order_status"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/bg_status_chip"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_order_total"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="$120.00"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"/>

            <ImageButton
                android:id="@+id/btn_order_actions"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Order actions"
                app:tint="@color/black" />
        </LinearLayout>
    </HorizontalScrollView>
</androidx.cardview.widget.CardView>