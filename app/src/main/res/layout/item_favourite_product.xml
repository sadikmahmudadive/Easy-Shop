<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_favourite_product"
            android:layout_width="80dp"
            android:layout_height="104dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/placeholder_image"/>

        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_toEndOf="@id/img_favourite_product"
            android:layout_marginStart="12dp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/tv_brand"
            android:layout_toEndOf="@id/img_favourite_product"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_product_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color: Blue"
            android:textSize="14sp"
            android:layout_below="@id/tv_product_title"
            android:layout_toEndOf="@id/img_favourite_product"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_product_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size: M"
            android:textSize="14sp"
            android:layout_below="@id/tv_product_color"
            android:layout_toEndOf="@id/img_favourite_product"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32$"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/img_favourite_product"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="4dp"/>

        <ImageButton
            android:id="@+id/btn_remove_favourite"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_remove_favorite"
            android:contentDescription="Remove from favorites"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>